#!/bin/sh
TESTFILE="/tmp/oelint_adv_test.bb"
trap "rm -f ${TESTFILE}" EXIT
TESTID="oelint.jetm.vars.dependssingleline"
TESTOCC="0"
cat > ${TESTFILE} << EOF
DEPENDS += "abc"
DEPENDS += "def"
DEPENDS += "ghi"
DEPENDS += "jkl"
RDEPENDS_\${PN} += "abc"
RDEPENDS_\${PN} += "def"
RDEPENDS_\${PN} += "ghi"
RDEPENDS_\${PN} += "jkl"
EOF
[ $(python3 -m oelint_adv --addrules=jetm ${TESTFILE} 2>&1 | grep ":${TESTID}:" | wc -l) = "${TESTOCC}" ] && exit 0;
echo "Test for ${0} failed"
exit 1